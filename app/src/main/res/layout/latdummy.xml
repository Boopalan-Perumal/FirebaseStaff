<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_margin="8dp"
    android:padding="8dp">
    <RelativeLayout
        android:id="@+id/r1"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:id="@+id/l0"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Student Name:"
                android:fontFamily="sans-serif-condensed"                android:textSize="20dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/auth"
                android:fontFamily="sans-serif-condensed"                android:text="Hari Krishnan"
                android:textSize="20dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:id="@+id/l1"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/l0"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:fontFamily="sans-serif-condensed"                android:text="Lat:"
                android:textSize="20dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/lat"
                android:text="13.0381863"
                android:fontFamily="sans-serif-condensed"                android:textSize="20dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:id="@+id/l2"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/l1"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Lon:"
                android:fontFamily="sans-serif-condensed"                android:textSize="20dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/lon"
                android:text="80.2736837"
                android:fontFamily="sans-serif-condensed"                android:textSize="20dp"/>
        </LinearLayout>




    </RelativeLayout>
</android.support.v7.widget.CardView>
